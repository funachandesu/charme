{
  "editor.formatOnSave": true,
  "liveSassCompile.settings.autoprefix": ["> 1%", "last 2 versions"],
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      // "extensionName": "_header_footer_2025.css",
      "extensionName": "_2025.css",
      "savePath": "/css"
    }
  ],
  "liveSassCompile.settings.excludeList": ["**/node_modules/**", ".vscode/**", ".history/**"],
  // "liveSassCompile.settings.forceBaseDirectory": "assets_header-footer/scss",
  "liveSassCompile.settings.forceBaseDirectory": "assets_new/scss",
  "liveServer.settings.donotShowInfoMsg": true,
  // PHP フォーマット設定
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },

  "files.exclude": {
    "**/*.log": true,
    "node_modules/": true,
    // "assets": true,
    "js/": true,
    "scss": true,
    "imgs/": true
  }
}
